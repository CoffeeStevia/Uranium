<UserControl x:Class="Uranium.Controls.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uranium.Controls"
             mc:Ignorable="d" 
             Height="40" Width="Auto">
    <Border x:Name="MainBorder" BorderThickness="1" CornerRadius="5" Margin="2" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF232A42"/>
                <GradientStop Color="#FF586BA8" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF06080D"/>
                <GradientStop Color="#FF1F2B55" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Label x:Name="TabLabel" FontFamily="Outfit Medium" VerticalContentAlignment="Center" Foreground="#C7C7C7" Content="Tab 1.lua" FontSize="14" Margin="5,0,28,0" Height="38" VerticalAlignment="Center"/>
            <Grid x:Name="CloseTabBtn" IsHitTestVisible="True" Cursor="Hand" Margin="80,0,0,0" Width="24" Height="22" MouseLeftButtonDown="buttonclose_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Path x:Name="ClosePath" Stroke="#c7c7c7" Data="M21 21L12 12M12 12L3 3M12 12L21.0001 3M12 12L3 21.0001" StrokeThickness="1" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Stretch="Fill" Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.55,0.538"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
